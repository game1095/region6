<h2 class="text-center">รายละเอียดเอกสาร</h2>
<div class="col-lg-12">
  <div class="ibox product-detail">
    <div class="ibox-content">
      <div class="row">
        <!-- Document Info -->
        <div class="col-lg-8">
          <h2 class="font-bold m-b-xs">เรื่อง : <%= @document.title %></h2>
          <hr>
          <h4>รายละเอียดเอกสาร</h4>
          <div class="small">
            <%= @document.details %>
          </div>
          <div class="small m-t-md">
            <dt>เลขที่เอกสาร</dt>
            <dd><%= @document.number %></dd>

            <dt>ความเร็ว</dt>
            <dd><%= @document.confidential.name %></dd>

            <dt>ผู้สร้างเอกสาร</dt>
            <dd><%= @document.user.full_name %></dd>

            <dt>หมายเหตุ</dt>
            <dd><%= @document.remark %></dd>
          </div>
          <hr>
          <div class="btn-group">
            <%= link_to 'ย้อนกลับ', url_for(:back) , class: 'btn btn-danger' %>
          </div>
        </div>

        <!-- file details -->
        <div class="col-lg-4">
          <h4>ไฟล์แนบ</h4>
          <table class="table table-border">
            <thead>
              <tr>
                <th>#</th>
                <th>File Name</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>1</td>
                <td>test.file</td>
                <td>ToDAY</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <hr>
</div>
<!-- sented details -->
