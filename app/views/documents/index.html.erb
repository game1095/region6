<div class="panel panel-default">
  <div class="panel-header">
    <h2 class="text-center">จัดการเอกสาร</h2>
  </div>
  <div class="panel-body">
    <div class="btn-group">
      <%= link_to root_path , class: 'btn btn-success' do %>
      <i class="fa fa-home"> หน้าหลัก</i>
      <% end %>
      <%= link_to new_document_path , class: 'btn btn-info' do %>
        <i class="fa fa-plus"> เพิ่มเอกสาร</i>
      <% end %>
    </div>
    <table class="footable table table-stripped default footable-loaded">
      <thead>
        <tr>
          <th>#</th>
          <th>เลขที่เอกสาร</th>
          <th>เรื่อง</th>
          <th>ถึง</th>
          <th>ส่งเอกสารเมื่อวันที่</th>
          <th>สร้างเอกสารเมื่อวันที่</th>
        </tr>
      </thead>
      <tbody>
        <% @documents.each do |doc| %>
        <tr>
          <td>1</td>
          <td><%= doc.number %></td>
          <td><%= link_to doc.truncate_title , document_path(doc.id) %></td>
          <td>#</td>
          <td>#</td>
          <td><%= doc.created_at.strftime('%d-%m-%Y') %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
