<div class="container">
  <div class="col-sm-12 col-md-12">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12 pad">
          <div class="life-style-post-text grid2">
            <div class="col-md-12 pad">
              <img src="<%= @new.attachments.first.url %>" height="1024" width="575">
            </div>
            <div class="col-md-12 pad">
              <div class="blog-text-post">
                <h1><%= @new.title %></h1>
                <span class="post-date"><%= @new.created_at.strftime("%d %B %Y") %> | เพิ่มโดย <%= @new.user.full_name %></span>
                <p><%= @new.details %></p>
              </div>
            </div
            <hr>
            <div class="row">
              <% @new.attachments.each do |pic| %>
                <div class="col-sm-4 col-md-4">
                  <%= link_to image_tag(pic.url, height: 300 , width:300) , pic.url , target: "_blank"  %>
                </div>
              <% end %>
            </div>
            <%= link_to url_for(:back), class: 'btn btn-danger btn-rounded btn-block' do %>
              <i class="fa fa-arrow-left"></i> ย้อนกลับ
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
