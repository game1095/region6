<div class="panel panel-default">
  <% if can? :manage , @new %>
    <h2 class="panel-header text-center">บริหารจัดการข่าวสาร</h2>
  <% else %>
    <h2 class="panel-header text-center">ข่าวสารทั้งหมด</h2>
  <% end %>
  <div class="panel-body">
    <div class="btn-group">
      <%= link_to root_path , class: 'btn btn-success' do %>
        <i class="fa fa-home"> หน้าหลัก</i>
      <% end %>

      <%= link_to url_for(:back) , class: 'btn btn-danger' do %>
        <i class="fa fa-arrow-left" > ย้อนกลับ</i>
      <% end %>
      <% if can? :manage , @new %>
        <%= link_to new_news_release_path , class: 'btn btn-info' do %>
          <i class="fa fa-plus"> เพิ่มข่าวสาร</i>
        <% end %>
      <% end %>
    </div>
    <br>
    <br>
    <div class="row">
      <% @news.each do |news| %>
      <div class="col-lg-4">
        <div class="ibox">
          <div class="ibox-content product-box">
            <div class="product-imitation">
              <%= image_tag news.attachments.first.url , height: '300', width: '300' %>
            </div>
            <div class="product-desc">
              <div class="product-name">
                <p><%= news.title %></p>
              </div>
              <div class="small m-t-xs">
                <%= news.truncate_details_news %>
              </div>
              <div class="m-t text-righ">
                <%= link_to news_release_path(news.id) , class: 'btn btn-xs btn-primary' do %>
                ดูรายละเอียด
                <i class="fa fa-long-arrow-right"></i>
                <% end %>

                <% if can? :manage , news  %>
                <td>
                  <div class="btn-group pull-right">
                    <%= link_to news_release_path(news.id) , class: 'btn btn-info btn-sm' do %>
                      <i class="fa fa-eye"></i>
                    <% end %>

                    <%= link_to  edit_news_release_path(news.id) , class: 'btn btn-success btn-sm' do %>
                      <i class="fa fa-edit" ></i>
                    <% end %>
                  </div>
                </td>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
