                      <th>ชื่อเรื่อง</th>
                      <th>จาก</th>
                    </thead>
                    <tbody>
                      <% @documents.each do |doc| %>
                      <tr>
                        <td>1</td>
                        <td><%= doc.number %></td>
                        <td><%= doc.title %></td>
                        <td><%= doc.department.name %></td>
                      </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
