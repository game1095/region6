      <div class="row m-b-lg">
        <div class="col-lg-12 text-center">
          <div class="navy-line"></div>
          <h1>ข่าวประชาสัมพันธ์</h1>
          <br>
          <div class="row">
            <% @news.each do |news| %>
            <div class="col-lg-4">
              <div class="ibox">
                <div class="ibox-content product-box">
                  <div class="product-imitation">
                    <%= image_tag news.attachments.first.url , height: '250', width: '250' %>
                  </div>
                  <div class="product-desc">
                    <div class="product-name">
                      <p><%= news.title %></p>
                    </div>
                    <div class="small m-t-xs">
                      <%= news.truncate_details_news %>
                    </div>
                    <div class="m-t text-righ">
                      <%= link_to news_release_path(news.id) , class: 'btn btn-xs btn-primary' do %>
                        ดูรายละเอียด
                        <i class="fa fa-long-arrow-right"></i>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
