<!-- Banner -->
<header>
  <div class="col-lg-12">
    <div class="carousel slide" id="carousel1">
     <div class="carousel-inner">
       <div class="item active ">
         <img alt="image" class="img-responsive" src="<%= @banners.last.attachments.url %>">
       </div>
        <% @banners.each do |banner| %>
          <div class="item ">
            <img alt="image" class="img-responsive" src="<%= banner.attachments.url %>">
          </div>
        <% end %>
     </div>
       <a data-slide="prev" href="#carousel1" class="left carousel-control">
           <span class="icon-prev"></span>
       </a>
       <a data-slide="next" href="#carousel1" class="right carousel-control">
           <span class="icon-next"></span>
       </a>
    </div>
    <br>
  </div>
</header>
<!-- News -->
<div class="col-sm-8 col-md-8">
  <div class="title">
    <h2><i class="fa fa-bullhorn"></i> ข่าวประชาสัมพันธ์</h2>
  </div>
  <div class="col-sm-6 col-md-6 pad">
    <div class="blog-content">
        <div class="blog-text">
          <img src="<%= @news_releases.attachments.first.url %>" height="500" width="650">
          <div class="subject">TRAVEL</div>
          <h3><%= @news_releases.title %></h3>
          <br>
          <span class="post-date">โพตส์เมื่อ <%= @news_releases.created_at.strftime("%d/%m/%Y") %></span>
          <p>
            <%=
            truncate(@news_releases.details,
            length: 600,
            omission: '... ') {
              link_to "คลิกเพื่ออ่านเพิ่มเติม", news_release_path(@news_releases.id) , class: 'btn btn-info btn-xs' , style: 'font-size:15px'}%>
          </p>
          <br>
        </div>
      </div>
  </div>
  <div class="col-sm-6 col-md-6">
    <% @news.drop(1).each do |new| %>
      <div class="weghiet">
        <div class="col-sm-4 col-md-4 pad">
          <img src="<%= new.attachments.first.url %>" height="100" width="70">
        </div>
        <div class="col-sm-8 col-md-8 pad">
          <h4><%= link_to new.title , news_release_path(new.id) %></h4>
          <span class="post-date">โพสต์เมื่อวันที่ <%= new.created_at.strftime("%d/%m/%Y") %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>


