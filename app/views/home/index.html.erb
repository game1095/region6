    <div class="row m-b-lg">
      <div class="col-lg-12 text-center">
      <div class="navy-line"></div>
        <h1 class="text-center">Documents</h1>
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="col-lg-12">
              <div class="ibox float-e-margins">
